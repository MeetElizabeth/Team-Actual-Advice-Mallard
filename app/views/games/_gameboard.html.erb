
<h2>Your Hints</h2>

<ol id='hints'>
  <li class='hint first_hint'><h4>Hint #1: </h4><p><%= @animal.fact_1 %></p></li>
  <li class='hint second_hint'><h4>Hint #2: </h4><p><%= @animal.fact_2 %></p></li>
  <li class='hint third_hint'><h4>Hint #3: </h4><p><%= @animal.fact_3 %></p></li>
  <li class='hint image_hint'><h4>Final Hint: </h4><p><%= image_tag(@animal.image, class: "animal-image") %></p></li>
</ol>



<div class="guess-area sortable">
</div>

<div class="letter-bank sortable">
  <% index = 1 %>
  <% @playable_letters.each do |letter| %>
    <span class="letter" id="letter-<%= index %>"><%= letter %></span>
    <% index += 1 %>
  <% end %>
</div>
<br>
<br>

<div class="countdown-container">
  <h1><span id="countdown"></span></h1>
</div>

<div class="hidden" style="display: none;">
<div class="answer" id="<%= @animal.name.downcase %>"></div>
<div class="animal" id="<%= @animal.id %>"></div>
</div>

<div>
  <button id="check-button">Check answer</button>
  <button><%= link_to 'Replay', game_path %></button>
  <button id="skip_hint_button">Skip To The Next Hint</button>
</div>

<h1 class='hooray'>Congratulations! You Made It!</h1>
<h2 id='points'></h2>
<h2 id='bonus_points'></h2>
<h2 id='total_points'></h2>
